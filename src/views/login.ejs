<%- include('layouts/layout', { title, highlight, user, body: `
  <div class="row justify-content-center">
    <div class="col-sm-10 col-md-6 col-lg-5">
      <div class="card shadow-sm border-0 auth-card">
        <div class="card-body p-4 p-md-5">
          <h2 class="mb-1 fw-bold text-center">Iniciar sesión</h2>
          <p class="text-muted text-center mb-4">Accede a tu cuenta para continuar</p>
          ${error ? `<div class="alert alert-danger">${error}</div>` : ``}
          <form method="POST" novalidate class="needs-validation">
            <div class="mb-3">
              <label class="form-label">Usuario</label>
              <input name="username" class="form-control form-control-lg" required placeholder="tu.usuario">
            </div>
            <div class="mb-3">
              <label class="form-label">Contraseña</label>
              <input type="password" name="password" class="form-control form-control-lg" required placeholder="••••••••">
            </div>
            <button class="btn btn-accent w-100 btn-lg">Entrar</button>
          </form>
          <div class="text-center mt-3 small text-muted">
            ¿No tienes cuenta? <a href="/register">Crear una</a>
          </div>
        </div>
      </div>
    </div>
  </div>
`}) %>
