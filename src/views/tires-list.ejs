<%- include('layouts/layout', { title, highlight, user, body: `
  <div class="d-flex align-items-center justify-content-between">
    <h2 class="mb-3">Catálogo de llantas</h2>
    <form class="d-flex" method="GET" action="/llantas">
      <input name="q" class="form-control me-2" placeholder="Buscar marca, modelo, medida...">
      <button class="btn btn-outline-accent">Buscar</button>
    </form>
  </div>

  <div class="row g-4">
    ${tires.map(t => `
      <div class="col-12 col-sm-6 col-md-4">
        <div class="card h-100 shadow-sm card-tire">
          <img src="${t.image}?v=${t.id}" class="card-img-top object-fit-contain" style="height:180px" alt="${t.brand} ${t.model}">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-1">${t.brand} ${t.model}</h5>
            <p class="text-muted mb-2">${t.size} • ${t.category || 'Turismo'}</p>
            <div class="mt-auto d-flex align-items-center justify-content-between">
              <span class="fw-bold fs-5 price-tag">$${t.price.toFixed(2)}</span>
              <div class="btn-group">
                <a href="/llantas/${t.id}" class="btn btn-outline-secondary btn-sm">Detalle</a>
                <a href="/contacto?ref=${t.id}" class="btn btn-accent btn-sm">Cotizar</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    `).join('')}
  </div>
`}) %>
