<%- include('layouts/layout', { title, highlight, user, body: `
  <div class="row justify-content-center">
    <div class="col-md-7">
      <h2 class="mb-3">Contacto</h2>
      <p class="text-muted">Escríbenos para cotizaciones e instalación.</p>
      <form class="card shadow-sm p-4 form-llanteria">
        <div class="mb-3">
          <label class="form-label">Nombre</label>
          <input class="form-control" placeholder="Tu nombre">
        </div>
        <div class="mb-3">
          <label class="form-label">Correo</label>
          <input type="email" class="form-control" placeholder="email@dominio.com">
        </div>
        <div class="mb-3">
          <label class="form-label">Mensaje</label>
          <textarea class="form-control" rows="4"><%= typeof ref !== 'undefined' ? ref : '' %></textarea>
        </div>
        <button class="btn btn-accent">Enviar (demo)</button>
      </form>
    </div>
  </div>
`}) %>
